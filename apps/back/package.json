{
  "name": "back",
  "version": "1.0.50",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build:prisma": "bunx prisma generate",
    "build:app": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile ../../dist/server ./src/index.ts",
    "build:cp": "cp .env ../../dist && cp -r ./src/generated ../../dist/generated",
    "build": "bun run build:prisma && bun run build:app && bun run build:cp"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.8",
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/static": "^1.3.0",
    "@prisma/client": "^6.8.2",
    "elysia": "latest",
    "luxon": "^3.6.1"
    
  },
  "devDependencies": {
    "prisma": "^6.8.2",
    "@types/luxon": "^3.6.2",
    "@elysiajs/swagger": "^1.3.0",
    "bun-types": "latest"
  },
  "module": "src/index.js"
}
